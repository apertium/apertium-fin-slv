<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- fin → slv -->

  <mode name="fin-slv" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="fin-slv.automorf.bin"/>
      </program>


      <program name="cg-proc -w -1 -n">
        <file name="fin-slv.rlx.bin"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="fin-slv.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="fin-slv.autolex.bin"/>
      </program>


      <program name="rtx-proc">
        <file name="fin-slv.rtx.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="fin-slv.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="fin-slv.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- slv → fin -->

  <mode name="slv-fin" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="slv-fin.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="slv-fin.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="slv-fin.prob"/>
      </program>

      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="slv-fin.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="slv-fin.autolex.bin"/>
      </program>


      <program name="rtx-proc">
        <file name="slv-fin.rtx.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="slv-fin.autogen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>

